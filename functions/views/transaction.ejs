		<script>

			function initApp() {
				var db = firebase.firestore();
				firebase.auth().onAuthStateChanged(function (user) {
					if (user) {
						document.getElementById('qwe').value = user.email;
						document.getElementById('qwe2').value = user.email;
					}
				});
			}
			window.onload = initApp();
		</script>

		<script>
			var i = 0;
			function submitAdd() {
				var k = document.getElementById('shop_name').value;
				if (!(k.match('^[a-zA-Z]*$'))) {
					window.alert('Enter valid shop name.');
					window.alert('Not updated');
					document.getElementById('myForm').style.display = 'none';
					return;
				}
				var checklim = document.getElementById('shop_amt').value;
				if (!(checklim.match('^[0-9]*$') && checklim > 0 && checklim.length > 2)) {
					window.alert('Enter valid amount');
					window.alert('Not updated');
					document.getElementById('myForm').style.display = 'none';
					return;
				}
				var checkcat = document.getElementById('myCat').value;

				var db = firebase.firestore();
				var user = firebase.auth().currentUser;
				//var time = firebase.database.ServerValue.TIMESTAMP;
				//console.log(time);
				if (user) {
					//window.alert('1');

					console.log(user);
					var x = user.email;
					var c = checkcat;
					var sch = db.collection('sign').doc(x).collection('transaction');
					// window.alert('2');

					var xyz = sch.doc(c);
					console.log(c);
					//window.alert('3');
					xyz.get().then(doc => {
						//window.alert('311111');
						if (doc.exists) {
							//window.alert('3222');
							var mytran = "tran" + i;
							//console.log("hell"+doc.data());
							//window.alert('4');
							var obj = {
								[mytran]: {
									name: document.getElementById('shop_name').value,
									amount: document.getElementById('shop_amt').value,
									create: new Date()
								}
							};
							//window.alert('5');
							//window.alert(obj);
							//console.log(obj);
							xyz.set(obj)
								.then(function () {
									window.alert("Transaction successfully added!");
									i++;
									//  document.getElementById('myForm').style.display = 'none';
									$("#hi").submit();
								})
								.catch(function (error) {
									console.log("Error writing document", error);
								});
						}
						else {

							var ob = {
								current: 0,
								limit: document.getElementById('cat_limit').value

							};
							xyz.set(ob)
								.then(function () {

									window.alert("Category successfully added!");
									document.getElementById('myForm').style.display = 'none';
									$("#hi").submit();

								})
								.catch(function (error) {
									console.log("Error writing document: ", error);
								});
						}
					}).catch(err => {
						window.alert(err);
					})
				}

				else {
					window.alert("User not found");

				}

			}
		</script>

