      function check_all(){
      $("#reg_form").on('submit',function(){
      if((err_fname == false) && (err_phone ==false) && (err_phone==false) && (err_uname==false )&& (err_pass==false) && (err_pass==false) && (err_repass == false)){
        //$('.ebutt').removeClass('disabled');
        //$('.emsg6').show();
        alert('Ok');
        return true;
      }
      else{
        //$('.emsg6').addClass('hidden');
       // $('.ebutt').addClass('disabled');
        return false;
      }
      });
    }
      
    
    });
  
</script>
</body>
</html>
